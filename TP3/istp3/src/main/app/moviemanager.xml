                </when>
                <otherwise>
                    <set-session-variable variableName="MovieMailList" value="#[sessionVars['MovieMailList'].concat(Movie.getName()+&quot;\n&quot;)]" doc:name="Re set var"/>
                </otherwise>
            </choice>
        </foreach>
